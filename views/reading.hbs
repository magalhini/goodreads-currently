<!DOCTYPE html>
<html lang="en">
  {{>header}}
<body class="dark-theme">

  <div class="container">
    <h1 class="main-title">Currently Reading</h1>
    <p class="main-subtitle">on goodreads</p>

    <div class="books">
      {{#if books}}
      {{#each books as |book|}}
      <div class="book">
        <a href={{ book.link }}>
          <img class="book__cover" width="100" src={{ book.image_url }} alt="">
        </a>
        <p class="book__title">{{ book.title }}</p>
        {{#each authors as |author|}}
          {{#each author as |name|}}
            <p class="book__author">{{ name.0.name }}</p>
          {{/each}}
        {{/each}}
      </div>
      {{/each}}
      {{else}}
        <h3>There's no one to list</h3>
      {{/if}}
    </div>
  </div>
</body>
</html>
